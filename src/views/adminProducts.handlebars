<body>
    <header>
        <div class="paragraph">
            <p>Bienvenida/o {{user.first_name}} {{user.last_name}}</p>
        </div>
        <div class="nav-container">
            <nav>
                <ul>
                    <li><a href="/logout">CERRAR SESIÓN</a></li>
                </ul>
            </nav>
        </div>
        <div class="logo-container">
            <img src="images/pages/logo.png" alt="Logo de VerdeVital" class="logo">
        </div>
    </header>
    <main>
        <section class="products">
            <h1 class="title">LISTA DE PRODUCTOS</h1>
            <div class="pagination-container">
                <a class="btn-added" href="/admin/create">Agregar producto</a>
            </div>
        </section>
    </main>
    <table>
        <thead>
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Categoría</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>${{this.price}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td class="btn-link">
                    <a class="btn-edit" href="/admin/edit/{{this.id}}">Editar</a>
                    <form action="/admin/delete/{{this.id}}" method="POST" style="display:inline;">
                        <button class="btn-delete" type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="pagination-container" id="pagination">
        {{#if hasPrevPage}}
        <a class="pagination-link" href="?page={{prevPage}}">Anterior</a>
        {{/if}}
        <span class="pagination-text">Página {{page}} de {{totalPages}}</span>
        {{#if hasNextPage}}
        <a class="pagination-link" href="?page={{nextPage}}">Siguiente</a>
        {{/if}}
    </div>
</body>

